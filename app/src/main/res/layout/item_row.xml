<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/recycler_item_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_image"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/ic_skill_iq_trimmed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_toEndOf="@+id/ic_image"
        android:text="@string/are_you_sure"
        android:textColor="@color/gray"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtview_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview_name"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@+id/ic_image"
        android:text="@string/are_you_sure"
        android:textColor="@color/gray"
        android:textSize="@dimen/_11sdp"
        android:textStyle="normal" />

</RelativeLayout>